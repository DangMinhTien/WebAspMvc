@page "admin/edit-role-claims/{claimid}"
@model Bai1_ChinhThuc.Areas.Admin.Pages.Roles.EditRoleClaimModel
@{
    ViewData["Title"] = "CHỉnh sửa đặc tính cho role";
}
<h2>@ViewData["Title"]: @Model.role.Name</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-route-claimid="@Model.claim.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Input.ClaimType" class="control-label"></label>
                <input asp-for="@Model.Input.ClaimType" class="form-control" />
                <span asp-validation-for="@Model.Input.ClaimType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Input.ClaimValue" class="control-label"></label>
                <input asp-for="@Model.Input.ClaimValue" class="form-control" />
                <span asp-validation-for="@Model.Input.ClaimValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                <input type="submit" value="Xóa" class="btn btn-danger" asp-page-handler="Delete" />
            </div>
        </form>
        <a class="btn btn-danger" asp-page="./Edit" asp-route-roleid="@Model.role.Id">Chỉnh sửa role</a>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@section SideBar {
    @{
        _AdminSideBarService.SetActive("", "", "Admin", "/Roles/Index");
    }
    @Html.Raw(_AdminSideBarService.RenderHtml())
}

