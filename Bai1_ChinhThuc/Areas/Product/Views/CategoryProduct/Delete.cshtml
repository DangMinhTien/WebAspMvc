@model Bai1_ChinhThuc.Model.Product.CategoryProduct
@{
    ViewData["Title"] = "Xóa chuyên mục";
}

<h1>@ViewBag.Title</h1>

<h3>Bạn có muốn xóa chuyên mục này ?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Danh sách chuyên mục</a>
    </form>
</div>
@section SideBar {
    @{
        _AdminSideBarService.SetActive("CategoryProduct", "Index", "Product");
    }
    @Html.Raw(_AdminSideBarService.RenderHtml())
}
